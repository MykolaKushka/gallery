doctype html
html(lang='en')
  head
    include ./common/meta
    title  Frontend assignment

    include ./common/links

  body.body
    include ./layouts/header
    
    .container
      .row
        aside.col-md-4.d-none.d-md-block.ps-0.sidebar-left
          nav.sidebar-menu
            ul.list-unstyled
              li.active
                a(href="#")
                  i.icon--photos
                  | All photos
              li
                a(href="#")
                  i.icon--selfies
                  | Selfies
              li
                a(href="#")
                  i.icon--recent
                  | Recent
              li
                a(href="#")
                  i.icon--delete
                  | Deleted
        main.col-lg-8.col.main-content
          header.row.justify-content-between.align-items-center
            .col.fw-bold.fs-40.text-dark.lh-40 All photos
            .col-auto
              .content-switcher
                ul.list-unstyled
                  li.active Newest
                  li Latest
          .fs-14.fw-bold.mt-1 150 items
          .content-photos
            .row
              .col-lg-6.col-md-12.col-sm-6
                .photo-card
                  .photo-card-image(style="background-image: url('https://fastly.picsum.photos/id/0/5000/3333.jpg?hmac=_j6ghY5fCfSD6tvtcV74zXivkJSPIfR9B8w34XeQmvU')")
                  .photo-card-content.p-4
                    h3.fs-24.text-dark.fw-700 Heading
                    .photo-card-text Here goes some sample, example text that is relatively short.
                    .photo-card-more.text-dark.fw-500.mt-2 Show more...
                  .photo-card-footer.p-3.d-flex
                    .btn.btn-primary.me-3 Save to collection
                    .btn.btn-secondary Share

    include ./common/scripts